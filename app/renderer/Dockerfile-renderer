# Use official Playwright image (Ubuntu Noble, Playwright 1.55.0, Python preinstalled)
FROM mcr.microsoft.com/playwright/python:v1.55.0-noble

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# Set working directory
WORKDIR /app

# Copy requirements and install
COPY app/renderer/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application
COPY app/renderer/ /app/

# Expose FastAPI port
EXPOSE 8404

# Start server
CMD ["uvicorn", "renderer.main_renderer:app", "--host", "0.0.0.0", "--port", "8404", "--workers", "1"]
