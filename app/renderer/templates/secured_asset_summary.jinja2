{% set _width, _height = set_viewport_size(1200, 1400) %}
{% extends "base.jinja2" %}

{% block content %}
    <style>
        .main-container {
            top: 12% !important;
        }

        .flex-all-center {
            display: flex;
            justify-content: center;
            align-items: center;

        }

        .logo-box {
            min-width: 50px;
        }

        .asset_logo {
            width: 40px;
            height: 40px;
            filter: drop-shadow(0 0 4px #0af);
            display: flex;
        }

        .main-container {
            top: 13%;
        }

        .table-head {
            color: #c5c5c5;
            font-weight: bolder;
        }

        .pane {
            padding: 0;
            margin: 0;
            width: 90%;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .one_asset_container {
            display: flex;
            flex-direction: row;
            gap: 0;
            padding-top: 6px;
            font-size: 24px;
            border-bottom: 1px solid #5a5a5a;
            padding-bottom: 6px;
        }

        .one_asset_container:last-child {
            border-bottom: none;
        }

        .t {
            padding-left: 5px;
            align-items: center;
            justify-content: center;
            min-width: 200px;
            font-size: 30px;
            margin: 0;
            font-weight: bolder;
        }

        .col-name {
            min-width: 220px;
            justify-content: left;
            font-weight: bolder;
            padding-left: 10px;
            font-size: 1.5em;
        }

        .col-holders {
            min-width: 180px;
        }

        .indicator-container {
            position: absolute;
            bottom: 5%;
            left: 3%;
            right: 3%;
            height: 13%;

            display: flex;
            flex-direction: row;
            align-items: stretch;
            flex-wrap: nowrap;
            justify-content: space-between;
        }

        .indicator-box {
            display: flex;
            padding: 1px 1px 10px;

            background: rgba(52, 51, 51, 0.21);
            border-radius: 12px;
            font-family: ThorFontLight, serif;
            justify-content: space-between;
            flex-direction: column;
            align-items: center;
        }

        .indicator-label {
            display: flex;

            font-weight: normal;
            font-size: 22px;
            color: rgb(40 244 175);
            letter-spacing: 1px;
            text-transform: uppercase;
            padding: 0 20px 0 20px;
        }

        .indicator-subvalue {
            display: flex;
            font-weight: bolder;
            font-size: 24px;
            color: #eee;
            letter-spacing: 2px;
            text-shadow: none;
        }

        .indicator-value {
            font-weight: bold;
            font-size: 42px;
            color: #ffffff; /* Bright orange color */
            margin-bottom: -3px;
            letter-spacing: 2px;
        }

        .price-delta {
            font-size: 20px !important;
        }

        .vert {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .small {
            font-size: 0.1em;
            font-weight: lighter;
        }

    </style>

    {% with title="SECURED ASSETS" %}
        {% include "components/header.jinja2" %}
    {% endwith %}

    <div class="main-container">

        <div class="pane">
            <div class="one_asset_container table-head">
                <div class="flex logo-box"></div>
                <div class="flex t col-name">
                    Name
                </div>
                <div class="flex t">
                    Total supply
                </div>
                <div class="flex t">
                    Value USD
                </div>
                <div class="flex t col-holders">
                    Holders
                </div>
                <div class="flex t">
                    Volume 24h
                </div>
            </div>

            {% for asset_name in current.asset_names_sorted[:9] %}
                % set curr_a = current.assets[asset_name]
                % set prev_a = previous.assets.get(asset_name, {})
                <div class="one_asset_container">

                    <div class="logo-box flex-all-center">
                        <img class="asset_logo"
                             src="renderer/logo/{{ curr_a['l1_name'] }}.png"
                             alt="{{ curr_a['l1_name'] }} logo"
                        >
                    </div>

                    <div class="flex col-name flex-all-center">{{ curr_a["display_name"] }}</div>

                    <div class="flex vert">
                        <div class="flex t">
                            {{ short_money(curr_a["supply"]) }}
                        </div>
                        <div class="flex small">
                            {% with curr=curr_a["supply"], prev=prev_a.get("supply", curr) %}
                                {% include "components/price_delta.jinja2" %}
                            {% endwith %}
                        </div>
                    </div>

                    <div class="flex vert">
                        <div class="flex t">
                            {{ short_dollar(curr_a["value_usd"]) }}
                        </div>
                        <div class="flex small">
                            {% with curr=curr_a["value_usd"], prev=prev_a.get("value_usd", curr) %}
                                {% include "components/price_delta.jinja2" %}
                            {% endwith %}
                        </div>
                    </div>

                    <div class="flex col-holders vert">
                        <div class="flex t">
                            {{ short_money(curr_a["holders"], integer=True) }}
                        </div>
                        <div class="flex small">
                            {% with curr=curr_a["holders"], prev=prev_a.get("holders", curr) %}
                                {% include "components/price_delta.jinja2" %}
                            {% endwith %}
                        </div>
                    </div>

                    <div class="flex t vert">
                        <div class="flex">
                            {{ short_dollar(curr_a["volume_24h_usd"]) }}
                        </div>

                        <div class="flex small">
                            {% with curr=curr_a["volume_24h_usd"], prev=prev_a.get("volume_24h_usd", curr) %}
                                {% include "components/price_delta.jinja2" %}
                            {% endwith %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

    <div class="indicator-container">
        <div class="indicator-box cbox">
            <div class="indicator-value"> {{ current.total_assets }}</div>
            <div class="indicator-subvalue">
                {% with prev=previous.total_assets, curr=current.total_assets, abs_value=True %}
                    {% include "components/price_delta.jinja2" %}
                {% endwith %}
            </div>
            <div class="indicator-label">Total secured assets</div>
        </div>

        <div class="indicator-box cbox">
            <div class="indicator-value"> {{ short_dollar(current.total_value_usd) }}</div>
            <div class="indicator-subvalue">
                {% with prev=previous.total_value_usd, curr=current.total_value_usd %}
                    {% include "components/price_delta.jinja2" %}
                {% endwith %}
            </div>
            <div class="indicator-label">Total secured depth</div>
        </div>

        <div class="indicator-box cbox">
            <div class="indicator-value"> {{ "%.1f"|format(current.total_secured_to_pool_percentage) }} %</div>
            <div class="indicator-subvalue">
                {% with prev=previous.total_secured_to_pool_percentage, curr=current.total_secured_to_pool_percentage,
                        abs_value=True, epilogue=' p.p.' %}
                    {% include "components/price_delta.jinja2" %}
                {% endwith %}
            </div>
            <div class="indicator-label">Secured / pool</div>
        </div>

        <div class="indicator-box cbox">
            <div class="indicator-value"> {{ short_dollar(current.total_volume_24h_usd) }}</div>
            <div class="indicator-subvalue">
                {% with prev=previous.total_volume_24h_usd, curr=current.total_volume_24h_usd %}
                    {% include "components/price_delta.jinja2" %}
                {% endwith %}
            </div>
            <div class="indicator-label">Volume 24H</div>
        </div>
    </div>

    <script>
        // todo
    </script>

{% endblock %}
